
<partial name="SidebarPartialView" />

<div class="row">
    <div class="col s12 m8 offset-m1 xl7 offset-xl1" style="margin-top: 1.5em">
        <a href="#loginModal" class="btn-floating waves-effect light-green modal-trigger"><i class="material-icons">account_circle</i></a>
    </div>
</div>

<div id="loginModal" class="modal">
    <div class="modal-content">
        <h4 class="center">Login</h4>
        @*Login form*@
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="icon_prefix" type="text" class="validate" required>
                    <label for="icon_prefix">Email</label>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">vpn_key</i>
                    <input id="icon_vpn_key" type="password" class="validate" required>
                    <label for="icon_vpn_key">Password</label>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a asp-action="Index" asp-controller="account" class="modal-close waves-effect btn green">
            Login
            <i class="material-icons right">send</i>
        </a>
    </div>
</div>

